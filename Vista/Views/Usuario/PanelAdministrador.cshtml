@model CapaSOPORTE.Listas;
@{
    ViewData["Title"] = "Panel de administrador";
}
<div class="container">
    <div class="table-responsive">
        <div class="table-wrapper">
            <div class="table-title">
                <div class="row">
                    <div class="col-sm-8"><h2>Usuarios</h2></div>
                    <div class="col-sm-4">
                    </div>
                </div>
            </div>
            <table class="table table-striped table-hover table-bordered">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Nombre</th>
                        <th>Primer apellido</th>
                        <th>Segundo apellido</th>
                        <th>Email</th>
                        <th>Teléfono</th>
                        <th>Acción</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var usuario in Model.listaUsuarios)
                    {
                        <tr>
                            <td>@usuario.id</td>
                            <td>@usuario.nombre</td>
                            <td>@usuario.apellido</td>
                            <td>@usuario.apellido2</td>
                            <td>@usuario.email</td>
                            <td>@usuario.telefono</td>
                            <td>
                                <a href="#" class="view" title="View" data-toggle="tooltip">&#128065;</a>
                                <a href="#" class="edit" title="Edit" data-toggle="tooltip">&#9998;</a>
                                <a href="#" class="delete" title="Delete" data-toggle="tooltip">&#9587;</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
